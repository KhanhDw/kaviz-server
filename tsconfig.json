{
  "compilerOptions": {
    "target": "es2022",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "rootDir": "src",
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@": ["src/*"],
      "@application/*": ["src/application/*"],
      "@domain/*": ["src/domain/*"],
      "@infrastructure/*": ["src/infrastructure/*"],
      "@interfaces/*": ["src/interfaces/*"],
      "@prisma/mysql-client": [
        "src/infrastructure/database/prisma/node_modules/@prisma/mysql-client"
      ]
    },
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*.ts",
    "src/infrastructure/database/prisma/node_modules/@prisma/mysql-client/**/*.ts",
    "src/infrastructure/database/prisma/node_modules/@prisma/mysql-client/**/*.d.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
